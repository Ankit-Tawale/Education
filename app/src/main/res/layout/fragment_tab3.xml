<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/c1"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/l1"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button6"
                        android:textSize="12dp"
                        android:text="Free Pack"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="3dp"
                        android:textSize="18dp"
                        android:text="IAS Prelims 2018 - Free Package" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 Total Tests Covered"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 2 Full Length tests"
                        android:layout_marginTop="15dp"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Sectional Tests"
                        android:layout_marginTop="15dp"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Previous year Papers"
                        android:layout_marginTop="15dp"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Now"
                        android:layout_marginTop="15dp"
                        android:textSize="12dp"/>
                </LinearLayout>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="66dp"
                    android:layout_marginTop="111dp"
                    android:background="@color/lightBlue"
                    android:text="Start Test"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:background="@color/orange"
                    android:layout_marginTop="33dp"/>

                <TableRow
                    android:id="@+id/hr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/l1"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                </TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hr"
                    android:gravity="center"
                    android:id="@+id/textview1"
                    android:text="Upgrade More Available Package"
                    android:textColor="@android:color/black" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regular Pack"
                                android:textSize="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="16"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock \n Now"
                                android:textColor="@color/darkblue"
                                android:layout_marginTop="10dp"
                                android:drawableLeft="@drawable/ic_lock_open"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ultimate Pack"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="38"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unlock \n Now"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/darkblue"
                                android:drawableLeft="@drawable/ic_lock_open"/>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/l6"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@color/colorgrey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/c1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content"
                    android:text="Introducing TyariPlus"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t5"
                    android:layout_marginLeft="18dp"
                    android:text="Subscribe to our Plus plan and get"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t6"
                    android:layout_marginLeft="18dp"
                    android:text="Unlimited Access to All Tests"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/t8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t7"
                    android:layout_marginLeft="18dp"
                    android:text="Pay once and get unlimited access for 12 months."
                    android:textColor="#000000"
                    android:textSize="12dp"/>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="143dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/t8"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/button4"
                    android:text="JOIN NOW"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/b7"
                    android:layout_width="143dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/b6"
                    android:layout_marginEnd="23dp"
                    android:background="@drawable/button2"
                    android:text="View Detail"
                    android:textColor="#3da0ee" />



            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l6"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/r1">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/orange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="7dp"
                        android:text="Browse More Packages"
                        android:textColor="@android:color/black" />

                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/c21"
                    android:layout_marginTop="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/l7"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SSC"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 Packages"
                                android:textColor="@color/orange"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:text="View Packages"
                            android:textAllCaps="false"
                            android:textColor="@color/blue" />
                        <TableRow
                            android:id="@+id/hr1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_below="@+id/l7"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">
                        </TableRow>
                    </RelativeLayout>


            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c22"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/l8"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Banking"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Packages"
                                android:textColor="@color/orange"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:text="View Packages"
                            android:textAllCaps="false"
                            android:textColor="@color/blue" />
                        <TableRow
                            android:id="@+id/hr2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_below="@+id/l8"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">
                        </TableRow>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/c23"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/l9"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Railways"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 Packages"
                                android:textColor="@color/orange"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"
                            android:text="View Packages"
                            android:textAllCaps="false"
                            android:textColor="@color/blue" />
                        <TableRow
                            android:id="@+id/hr3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="10dp"
                            android:layout_below="@+id/l9"
                            android:layout_marginBottom="10dp"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">
                        </TableRow>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View All"
                    android:gravity="center"
                    android:background="@color/blue"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>